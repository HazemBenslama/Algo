ALGORITHM Checkpoint
VAR
    nc,nw,nw: INTEGER:=0;
    c ; CHAR;
BEGIN
REPEAT
    write("Donner un caract√©re");
    read (c);
    nc:= nc + 1;
    IF (c=' ') THEN
        nw := nw + 1;
    END_IF
    IF (c = 'a' OR c='e' OR c='i' OR c='y' OR c='u' OR c='o') THEN
        nv:= nv+1;
    END_IF
UNTIL (c='.')

write("Caracter's number",nc);
write("Word's number",nw);
write("Vowel's number",nv)
 
END